<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.illunex.emsaasrestapi.project.mapper.ProjectMapper">
    <insert id="insertProjectVO" parameterType="ProjectVO" useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO project (
            project_category_idx,
            title,
            description,
            status_cd,
            node_cnt,
            edge_cnt,
            update_date,
            create_date
        ) VALUES (
            #{projectCategoryIdx},
            #{title},
            #{description},
            #{statusCd},
            0,
            0,
            now(),
            now()
        )
        <selectKey resultType="int" keyProperty="idx" order="AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey>
    </insert>

    <select id="countByProjectCategoryIdx" parameterType="Integer" resultType="Integer">
        SELECT COUNT(*) FROM project
        WHERE project_category_idx = #{idx}
    </select>

    <select id="selectAllByProjectCategoryIdx" parameterType="Integer" resultType="ProjectVO">
        SELECT
            *
        FROM project
        WHERE project_category_idx = #{projectCategoryIdx}
    </select>

    <update id="updateCategoryByProjectCategoryIdx" parameterType="Integer">
        Update project
        SET project_category_idx = 0
        WHERE project_category_idx = #{projectCategoryIdx}
    </update>
    <update id="updateProjectCategoryIdx" parameterType="ProjectVO">
        UPDATE project
        SET projectCategoryIdx = #{projectCategoryIdx}
        WHERE idx = #{idx}
    </update>

    <delete id="deleteByIdx" parameterType="Integer">
        DELETE project
        WHERE idx = #{idx}
    </delete>


</mapper>