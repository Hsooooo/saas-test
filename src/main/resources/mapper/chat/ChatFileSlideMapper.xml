<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.illunex.emsaasrestapi.chat.mapper.ChatFileSlideMapper">

    <insert id="insertByChatFileSlideVO" parameterType="ChatFileSlideVO" useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO chat_file_slide (chat_file_idx, content, page, create_date, update_date)
        VALUES (#{chatFileIdx}, #{content}, #{page}, NOW(), NOW())
    </insert>

    <select id="selectByChatFileIdxIn" resultType="ChatFileSlideVO">
        SELECT *
        FROM chat_file_slide
        WHERE chat_file_idx IN
        <foreach item="item" index="index" collection="chatFileIdxs" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>
</mapper>