<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.illunex.emsaasrestapi.project.mapper.ProjectCategoryMapper">

    <insert id="insertLoginHistory" parameterType="ProjectCategoryVO" useGeneratedKeys="true" keyProperty="idx">

    </insert>

    <select id="selectByProjectCategoryIdx" parameterType="int" resultType="ProjectCategoryVO">
        SELECT *
        FROM project_category
        where idx = #{projectCategoryIdx}
    </select>

    <delete id="deleteByProjectCategoryIdx" parameterType="int">
        DELETE
        FROM project_category
        WHERE idx = #{projectCategoryIdx}
    </delete>

    <update id="updateSortByProjectCategory" parameterType="RequestProjectDTO.ProjectCategory">
        UPDATE project_category
        SET sort = #{sort}
        WHERE idx = #{projectCategoryId}
    </update>
</mapper>