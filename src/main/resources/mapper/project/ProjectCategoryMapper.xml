<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.illunex.emsaasrestapi.project.mapper.ProjectCategoryMapper">

    <insert id="insertLoginHistory" parameterType="ProjectCategoryVO" useGeneratedKeys="true" keyProperty="idx">

    </insert>


    <select id="findByPartnershipIdx" parameterType="ProjectCategoryVO" resultType="ProjectCategoryVO">
        SELECT * FROM project_category
        WHERE partnership_idx = #{partnershipIdx}
    </select>

    <select id="findMaxSort" parameterType="Integer" resultType="ProjectCategoryVO">
        SELECT max(sort) FROM project_category
        FOR UPDATE
    </select>

    <insert id="save" parameterType="ProjectCategoryVO" useGeneratedKeys="true" keyProperty="idx">
        INSERT INTO project_category (
            partnership_idx,
            name,
            sort,
            update_date,
            create_date
        ) VALUES (
             #{partnershipIdx},
             #{name},
             #{sort},
             NOW(),
             NOW()
         )
    </insert>

    <update id="update" parameterType="ProjectCategoryVO">
        UPDATE project_category
        SET
            partnership_idx = #{partnershipIdx},
            name = #{name},
            update_date = NOW()
        WHERE
            idx = #{idx}
    </update>


</mapper>